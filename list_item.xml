<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/linearLayout_margin">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/iv_dim"
            android:layout_height="@dimen/iv_dim"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/linearLaout_padding">

            <TextView
                android:id="@+id/tv_Spot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_Spot_size"
                android:textStyle="bold"
                android:layout_margin="@dimen/tv_margin" />

            <TextView
                android:id="@+id/tv_Feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tv_margin" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
